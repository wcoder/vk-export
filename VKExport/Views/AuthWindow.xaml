<Window x:Class="VKExport.AuthWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Aвторизация Вконтакте"
		Height="500" Width="500"
		ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
	<Grid>
		<StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
			<!-- TODO: стили -->
			<TextBlock Text="Ваш логин (Email или номер телефона):" />
			<TextBox x:Name="Login" />
			<TextBlock Text="Ваш пароль:" />
			<PasswordBox x:Name="Password" />
			<Button Content="Войти" Click="AuthButton_Click"/>				
		</StackPanel>		
	</Grid>
</Window>
